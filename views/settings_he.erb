<% content_for :header_content_center do %>
  <h1>הגדרות</h1>
<% end %>

<main>
  <form action="/settings" method="post">
    <fieldset>
      <dl>
        <dt>הפעל מיקוד מבט</dt>
        <dd>
        <label>
          <input type="radio" name="gaze_aware" value="on" checked>
          כן
        </label>
        <label>
          <input type="radio" name="gaze_aware" value="off" >
          לא
        </label>
        </dd>
      </dl>

      <dl>
        <dt>
          <label for="select_delay">
            מספר שניות השהייה לפני בחירת סירטון:
          </label>
          <span class="slider_value" id="select">
            1
          </span>
        </dt>
        <dd>
          <input type="range" name="select_delay"
                   id="select_delay" value="10" min="1" max="50">
        </dd>

        <dt>
          <label for="click_delay">
            מספר שניות השהייה לפני תחילת נגינה:
          </label>
          <span class="slider_value" id="click">
            1
          </span>
        </dt>
        <dd>
          <input type="range" name="click_delay"
                   id="click_delay" value="10" min="1" max="50">
        </dd>
      </dl>
      <dl>
        <dt>
          <label for="row_number">מספר שורות בדף:</label>
        </dt>
        <dd>
          <select name="row_number" id="row_number">
            <option>1</option>
            <option selected>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
          </select>
        </dd>

        <dt>
          <label for="col_number">מספר עמודות בדף תוצאות:</label>
        <dd>
          <select name="col_number" id="col_number">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option selected>4</option>
            <option>5</option>
          </select>
        </dd>
      </dl>
      <dl>
        <dt>צבע הרקע<span>יש ללחוץ על הפס לבחירה</span></dt>
        <dd>
          <input name="background_color" type="color" value="#fafafa">
        </dd>
      </dl>
      <input type="submit" value="שמור">
      <input type="reset" value="אתחל">
    </fieldset>
  </form>
</main>

<script type="text/javascript" src="javascripts/settings.js"></script>
